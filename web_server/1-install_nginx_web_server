#!/usr/bin/env bash
# Configures a new Ubuntu machine to install nginx web server

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Create the HTML directory if it doesn't exist
mkdir -p /var/www/html

# Create custom index.html with required string
echo "Holberton School for the win!" > /var/www/html/index.html

# Configure nginx to serve the custom page
cat > /etc/nginx/sites-available/default << EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Restart nginx (without systemctl)
service nginx restart
