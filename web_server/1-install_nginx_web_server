#!/usr/bin/env bash
# This script installs and configures Nginx to serve "Holberton School" on Ubuntu

# Update package list and install nginx silently
apt-get update -y > /dev/null 2>&1
apt-get install -y nginx > /dev/null 2>&1

# Start or restart Nginx without using systemctl
service nginx start > /dev/null 2>&1
service nginx reload > /dev/null 2>&1

# Overwrite default index.html with the required content
echo "Holberton School for the win!" > /var/www/html/index.html

