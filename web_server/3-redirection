#!/usr/bin/env bash
# 3-redirection
# Configures nginx to redirect /redirect_me (301 Moved Permanently)

# Update & install nginx
apt-get update -y
apt-get install nginx -y

# Backup config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Insert redirect inside the server block (after 'server_name _;')
sed -i '/server_name _;/a \\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Test nginx configuration before restarting
nginx -t && service nginx restart
=======
# bash script that configures a Nginx server to redirect '/redirect_me' to 'http://youtube.com/'
# redirection is configured as a "301 Moved Permanently"

apt-get update
apt-get install -y nginx

mkdir /etc/nginx/html
touch /etc/nginx/html/index.html
echo "Holberton School" > /etc/nginx/html/index.html
printf %s "server {
    listen 80;
    listen [::]:80 default_server;
    root   /etc/nginx/html;
    index  index.html index.htm;
    location /redirect_me {
        return 301 http://youtube.com/;
    }
}" > /etc/nginx/sites-available/default

service nginx restart
