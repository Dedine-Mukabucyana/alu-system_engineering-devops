# 4-not_found_page_404
# Configure nginx to serve a custom 404 page with "Ceci n'est pas une page"

# Update and install nginx
apt-get update -y
apt-get install nginx -y

# Backup default config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Create a custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Configure nginx to use the custom 404 page
# Insert inside the main server block, after 'server_name _;'
sed -i '/server_name _;/a \\terror_page 404 /custom_404.html;\n\tlocation = /custom_404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Restart nginx safely (without systemctl)
nginx -t && service nginx restart
=======
# Configure your Nginx server to have a custom 404 page that contains the string Ceci n'est pas une page;

apt-get update
apt-get install -y nginx

mkdir /etc/nginx/html

touch /etc/nginx/html/index.html


echo "Holberton School" > /etc/nginx/html/index.html
echo "Ceci n'est pas une page" > /etc/nginx/html/404.html


# Create custom 404 error page
echo "<!DOCTYPE html>
<html>
<head>
  <title>404 Not Found</title>
</head>
<body>
  <h1>404 Not Found</h1>
  <p>Ceci n'est pas une page</p>
</body>
</html>" | sudo tee /var/www/html/404.html >/dev/nullservice nginx restart

printf %s "server {
     listen      80 default_server;
     listen      [::]:80 default_server;
     root        /etc/nginx/html;
     index       index.html index.htm;
     location /redirect_me{
        return 301 http://youtube.com/;
     }
     error_page 404 /404.html;
     location /404 {
        root /etc/nginx/html;
        internal;
     }
}
" > /etc/nginx/sites-available/default
service nginx restart

