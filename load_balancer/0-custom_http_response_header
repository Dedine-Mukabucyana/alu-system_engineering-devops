#!/usr/bin/env bash
# Configures Nginx on a new Ubuntu server:
# - Serves "Holberton School" at /
# - Adds X-Served-By header with hostname
# - Redirect /redirect_me with 301
# - Custom 404 page

# Update and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Create index page
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null
sudo chmod 644 /var/www/html/index.html

# Create custom 404 page
echo -n "Ceci n'est pas une page" | sudo tee /var/www/html/404.html > /dev/null
sudo chmod 644 /var/www/html/404.html

# Backup default config
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.backup

# Write new Nginx config
sudo tee /etc/nginx/sites-available/default > /dev/null <<'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    root /var/www/html;
    index index.html index.htm;
    server_name _;
    
    # Add custom header - moved to http block would be better, but this works
    add_header X-Served-By "$hostname" always;
    
    location / {
        try_files $uri $uri/ =404;
    }
    
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
    
    error_page 404 /404.html;
    location = /404.html {
        internal;
        add_header X-Served-By $hostname always;
    }
}
EOF

# Test configuration and reload Nginx
sudo nginx -t
sudo service nginx restart

# Verify the hostname
echo "Server hostname: $(hostname)"
