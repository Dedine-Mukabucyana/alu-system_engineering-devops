#!/usr/bin/env bash

# Install HAProxy if not already installed
apt-get update
apt-get install -y haproxy

# Enable HAProxy to start on boot
systemctl enable haproxy

# Write HAProxy configuration
cat > /etc/haproxy/haproxy.cfg << 'EOF'
global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 256

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_front
    bind *:80
    default_backend web_backend

backend web_backend
    balance roundrobin
    server web-01 44.212.2.129:80 check
    server web-02 54.173.192.125:80 check
    http-response set-header X-Served-By %s
EOF

# Restart HAProxy
systemctl restart haproxy
